<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>edu.harvard.hms.dbmi.bd2k.irct</groupId>
	<artifactId>IRCT</artifactId>
	<version>1.4.2</version>
	<packaging>pom</packaging>
	<name>IRCT</name>
	<modules>
		<module>IRCT-RI</module>
		<module>IRCT-EXT</module>
		<module>IRCT-CL</module>
		<module>IRCT-API</module>
		<module>SciDB-Java</module>
		<module>i2b2-java-API</module>
	</modules>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<version.wildfly.maven.plugin>1.0.2.Final</version.wildfly.maven.plugin>
		<version.jboss.bom>8.2.1.Final</version.jboss.bom>
		<version.compiler.plugin>3.7.0</version.compiler.plugin>
		<version.surefire.plugin>2.16</version.surefire.plugin>
		<version.war.plugin>2.5</version.war.plugin>
		<maven.compiler.target>1.7</maven.compiler.target>
		<maven.compiler.source>1.7</maven.compiler.source>
		
		<jenkins.build.number>${env.BUILD_NUMBER}</jenkins.build.number>
		<jenkins.build.name>${env.BUILD_DISPLAY_NAME}</jenkins.build.name>
		<jenkins.build.tag>${env.BUILD_TAG}</jenkins.build.tag>
		<jenkins.build.timestamp>${env.BUILD_TIMESTAMP}</jenkins.build.timestamp>
		<jenkins.build.url>${env.BUILD_URL}</jenkins.build.url>
		
		<jenkins.build.git_branch>${env.GIT_BRANCH}</jenkins.build.git_branch>
		<jenkins.build.git_commit>${env.GIT_COMMIT}</jenkins.build.git_commit>
		<jenkins.build.git_url>${env.GIT_URL}</jenkins.build.git_url>

		<jenkins.build.job_name>${env.JOB_NAME}</jenkins.build.job_name>
		<jenkins.build.job_url>${env.JOB_URL}</jenkins.build.job_url>
		
	</properties>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>${version.compiler.plugin}</version>
					<configuration>
						<source>${maven.compiler.source}</source>
						<target>${maven.compiler.target}</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
